<Page
    x:Class="FilmsGlossary.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FilmsGlossary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
>   
    <!-- Container Grid -->
    <Grid x:Name="grid1" x:FieldModifier="public" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="337"/>
            <ColumnDefinition Width="1029"/>
        </Grid.ColumnDefinitions>
        
        <!-- Side Bar-->
        <GridView x:Name="sideGrid" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False" SelectionMode="None" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="sideCol" Orientation="Vertical" Margin="0">
            <!-- Search Items -->
            <StackPanel x:Name="searchPanel" Orientation="Vertical" Margin="0">
				<TextBlock x:Name="searchLabel" Text="SEARCH" Margin="10,20,0,0" /> 
                <TextBox x:ConnectionId='2' x:Name="searchTerm" TextWrapping="Wrap" Text="" Height="15" Width="304" Margin="10,20" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center"                                                             PlaceholderText="What are you looking for?"/>
                <Button x:ConnectionId='3' Content="Search" Command="{Binding SearchTerm}"                      HorizontalAlignment="Center" Margin="0,0,0,50" Background="#FF337BAC" />
                    <SearchBox PlaceholderText="What are you looking for?" ></SearchBox>
            </StackPanel>
            
            <!-- Terms List-->
            <StackPanel x:Name="terms" Orientation="Vertical" Margin="0">
                <TextBlock Grid.Row="1" TextWrapping="Wrap" Text="Terms" Height="20" Width="304" FontSize="18" Margin="0,0,0,10" />
                    <ListView ItemsSource="{Binding TermsCollection}" x:Name="termsListContainer" Grid.RowSpan="2" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                            <Button x:ConnectionId='1' x:Name="termButton" Content="{Binding TermName, FallbackValue='Not Working'}"  Margin="5"                     />
                        </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
            </StackPanel>
        </GridView>
        
        <!-- Main Content-->
        <GridView x:Name="mainContent" x:FieldModifier="public" Grid.Column="1" Margin="5,-10,-5,10" SelectionMode="None">
            <ListView x:Name="termsList"  Margin="10,50,10,10" SelectedItem="" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="10">
                            <TextBlock Text="{}" />
                            <TextBlock Text="Nothing Loaded" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </GridView>
        
    </Grid>
</Page>

