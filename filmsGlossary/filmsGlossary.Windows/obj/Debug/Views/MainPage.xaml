<Page
    x:Class="FilmsGlossary.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FilmsGlossary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
>

    
    <!-- Container Grid -->
    <Grid x:Name="grid1" x:FieldModifier="public" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="337"/>
            <ColumnDefinition Width="1029"/>
        </Grid.ColumnDefinitions>
        
        <!-- Side Bar-->
        <GridView x:Name="sidebar" Grid.Column="0" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False" SelectionMode="None">
            <StackPanel x:Name="termPanel" Orientation="Vertical" Margin="0">
                <TextBox x:ConnectionId='2' x:Name="searchTerm" TextWrapping="Wrap" Text="enter search term..." Height="15" Width="304" Margin="10,50,10,20" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center"                                                            />
                <Button x:ConnectionId='3' Content="Search"                      HorizontalAlignment="Center" Margin="0,0,0,50" />
                <TextBlock Grid.Row="1" TextWrapping="Wrap" Text="Terms" Height="20" Width="304" FontSize="18" Margin="0,0,0,20" />
            </StackPanel>
                <ListView x:Name="termsListContainer" Grid.RowSpan="2" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                            <Button x:ConnectionId='1' x:Name="termButton" Content="{Binding actorFirst}"  Margin="5"                     />
                        </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
        </GridView>
        
        <!-- Main Content-->
        <GridView x:Name="mainContent" x:FieldModifier="public" Grid.Column="1" Margin="5,0,-5,0" SelectionMode="None">
            <ListView x:Name="termsList"  Margin="10,50,10,10" SelectedItem="" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="10">
                            <TextBlock Text="{}" />
                            <TextBlock Text="Nothing Loaded" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </GridView>
        <TextBlock x:Name="firstName" Text="{Binding FirstName, FallbackValue='James'}" Width="330" Height="50" Margin="0,0,50,50"/>
        <TextBlock x:Name="lastName" Text="{Binding LastName, TargetNullValue='Unknown'}" Width="330" Height="50"/>
    </Grid>
</Page>

